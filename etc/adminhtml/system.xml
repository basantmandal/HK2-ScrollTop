<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="hk2_options_tab" sortOrder="3000">
            <label>HK2</label>
        </tab>
        <section id="hk2_options_section_scrollTop" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Scroll Top</label>
            <tab>hk2_options_tab</tab>
            <resource>HK2_ScrollTop::core_config</resource>
            <group id="hk2scrolltop_settings" translate="label" type="text" sortOrder="250" showInDefault="1">
                <label>Settings</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
