<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add ScrollTop CSS File -->
        <referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" name="scrolltop_header" template="HK2_ScrollTop::header.phtml" ifconfig="hk2_options_section_scrollTop/hk2scrolltop_settings/enable"/>
        </referenceBlock>
        <!-- Adds ScrollTop JS Activation -->
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="scrolltop_footer" template="HK2_ScrollTop::footer.phtml" ifconfig="hk2_options_section_scrollTop/hk2scrolltop_settings/enable"/>
        </referenceContainer>
    </body>
</page>
